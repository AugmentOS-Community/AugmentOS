<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Container for the camera preview view (will be added programmatically) -->
    <FrameLayout
        android:id="@+id/rtmp_preview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <!-- Optional overlay for controls -->
    <LinearLayout
        android:id="@+id/rtmp_controls_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#80000000">

        <!-- Play/Start Streaming Button -->
        <ImageButton
            android:id="@+id/rtmp_btn_start"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Start Streaming"
            android:src="@drawable/ic_play" />

        <!-- Stop Streaming Button -->
        <ImageButton
            android:id="@+id/rtmp_btn_stop"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Stop Streaming"
            android:src="@drawable/ic_stop" />
    </LinearLayout>

</FrameLayout>