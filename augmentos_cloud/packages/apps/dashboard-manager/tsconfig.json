{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@augmentos/clients": ["../clients/dist"],
      "@augmentos/types": ["../types/dist"],
      "@augmentos/config": ["../config/dist"],
      "@augmentos/utils": ["../utils/dist"],
      "@augmentos/agents": ["../agents/dist"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
