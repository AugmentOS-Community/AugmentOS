{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@augmentos/sdk": ["../sdk/dist"],
      "@augmentos/utils": ["../utils/dist"],
      "@augmentos/agents": ["../agents/dist"],
    }
  },
  "include": ["src/**/*", "../../agents/src/FunFactAgent.ts"],
  "exclude": ["node_modules", "dist"]
}
